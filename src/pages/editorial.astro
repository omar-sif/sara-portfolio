---
import BaseLayout from '../layouts/BaseLayout.astro';
import GoBack from '../components/GoBack.jsx';
---

<BaseLayout title="Editorial Covers - Sara El Aam">
  <!-- Hero Section -->
  <section class="relative bg-black pt-24 pb-20 sm:pt-32 shadow-lg text-primary-mid overflow-hidden">
    <div class="flex justify-center items-center px-6">
      <div class="relative text-center">
        <h1 class="font-clash font-medium leading-[0.9] tracking-normal text-4xl md:text-[8rem] animate-on-scroll">
          Editorial Covers
        </h1>

      </div>
    </div>
    
    <!-- Go Back Button -->
    <div class="absolute left-6 bottom-6">
      <GoBack client:load />
    </div>
  </section>

  <!-- Section 01: Catalogue/web -->
  <section class="py-20 bg-background-light dark:bg-background-dark">
    <div class="max-w-7xl mx-auto px-6">
      
      <!-- 01 Catalogue/web Header -->
      <div class="flex flex-col items-center justify-center mb-8 animate-on-scroll">
        <span class="font-clash font-normal text-5xl  sm:text-7xl md:text-5xl text-black dark:text-white">
          01
        </span>
        <span class="font-clash font-light uppercase text-2xl sm:text-3xl md:text-4xl text-black dark:text-white ">
          Catalogue/web
        </span>
      </div>

      <!-- Row 1: 2 images -->
      <div class="flex justify-center gap-4 mb-4">
        <div class="w-[40%] animate-on-scroll">
          <div class="overflow-hidden">
            <img 
              src="/assets/editorial1.png" 
              alt="Editorial catalogue image 1"
              class="w-full h-auto object-cover hover:scale-105 transition-transform duration-500"
              loading="lazy"
            />
          </div>
        </div>
        <div class="w-[40%] animate-on-scroll" style="animation-delay: 0.1s;">
          <div class="overflow-hidden">
            <img 
              src="/assets/editorial2.png" 
              alt="Editorial catalogue image 2"
              class="w-full h-auto object-cover hover:scale-105 transition-transform duration-500"
              loading="lazy"
            />
          </div>
        </div>
      </div>

      <!-- Row 2: 3 images -->
      <div class="flex justify-center gap-4">
        <div class="w-[30%] animate-on-scroll" style="animation-delay: 0.2s;">
          <div class="overflow-hidden">
            <img 
              src="/assets/editorial3.png" 
              alt="Editorial catalogue image 3"
              class="w-full h-auto object-cover hover:scale-105 transition-transform duration-500"
              loading="lazy"
            />
          </div>
        </div>
        <div class="w-[30%] animate-on-scroll" style="animation-delay: 0.3s;">
          <div class="overflow-hidden">
            <img 
              src="/assets/editorial4.png" 
              alt="Editorial catalogue image 4"
              class="w-full h-auto object-cover hover:scale-105 transition-transform duration-500"
              loading="lazy"
            />
          </div>
        </div>
        <div class="w-[30%] animate-on-scroll" style="animation-delay: 0.4s;">
          <div class="overflow-hidden">
            <img 
              src="/assets/editorial5.png" 
              alt="Editorial catalogue image 5"
              class="w-full h-auto object-cover hover:scale-105 transition-transform duration-500"
              loading="lazy"
            />
          </div>
        </div>
      </div>

    </div>
  </section>

  <!-- Section 02: Poster -->
  <section class="py-20 bg-background-light dark:bg-background-dark">
    <div class="max-w-7xl mx-auto px-6">
      
      <!-- 02 Poster Header - Centered vertically -->
      <div class="flex flex-col items-center justify-center animate-on-scroll">
        <span class="font-clash font-normal text-5xl  sm:text-7xl md:text-5xl text-black dark:text-white"">
          02
        </span>
        <span class="font-clash font-light uppercase text-2xl sm:text-3xl md:text-4xl text-black dark:text-white ">
          Poster
        </span>
        
        <!-- Centered Poster Image -->
        <div class="overflow-hidden max-w-2xl animate-on-scroll" style="animation-delay: 0.1s;">
          <img 
            src="/assets/editorial6.png" 
            alt="Editorial poster"
            class="w-full h-auto object-cover hover:scale-105 transition-transform duration-500"
            loading="lazy"
          />
        </div>
      </div>

    </div>
  </section>
</BaseLayout>

