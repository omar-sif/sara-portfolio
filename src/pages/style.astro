---
import BaseLayout from '../layouts/BaseLayout.astro';
import GoBack from '../components/GoBack.jsx';
---

<BaseLayout title="En Mode مستيليا - Sara El Aam">
  <!-- Hero Section -->
  <section class="relative bg-black pt-24 pb-20 sm:pt-32 shadow-lg text-white overflow-hidden">
    <div class="max-w-7xl mx-auto px-6">
      <div class="flex justify-center items-center">
        <div class="relative">
          <h1 class="font-clash font-medium leading-[0.9] tracking-normal text-4xl md:text-7xl xl:text-9xl flex flex-col sm:flex-row items-center gap-4 sm:gap-32 animate-on-scroll">
            <span>En mode</span>
            <span dir="rtl">مستيليا</span>
          </h1>
          <span class="absolute right-0 -bottom-8 text-sm uppercase tracking-normal font-clash text-primary-dark font-semibold animate-on-scroll" style="animation-delay: 0.1s;">
            Photography
          </span>
        </div>
      </div>
    </div>
    
    <!-- Go Back Button -->
    <div class="absolute left-6 bottom-6">
      <GoBack client:load />
    </div>
  </section>

  <!-- Description Section -->
  <section class="py-12 md:py-24 bg-background-light dark:bg-background-dark">
    <div class="max-w-4xl mx-auto px-6 text-center">
      <p class="font-general font-medium text-base md:text-xl text-black dark:text-black leading-relaxed text-left max-w-2xl mx-auto animate-on-scroll">
        "En Mode مستيليا" merges modernity and tradition through fashion. By combining denim, a symbol of casual wear, with the luxurious fabrics of the caftan, the collection bridges past and present. The vibrant red embodies passion, boldness, and elegance, capturing the essence of this unique fusion.
      </p>
    </div>
  </section>

  <!-- Images Grid -->
  <section class="max-w-7xl mx-auto px-4 sm:px-6 md:px-8 pb-16 md:pb-24">
    <div class="grid grid-cols-1 mt-8 md:grid-cols-2 gap-x-8 lg:gap-x-16">
      <div class="flex flex-col gap-8 lg:gap-12">
        <div class="w-full animate-on-scroll">
          <img 
            src="/assets/style_1.png" 
            alt="Style view 1"
            class="max-w-full h-auto object-cover hover:scale-[1.02] transition-transform duration-500"
            loading="lazy"
          />
        </div>
        <div class="w-full animate-on-scroll" style="animation-delay: 0.2s;">
          <img 
            src="/assets/style_2.png" 
            alt="Style view 2"
            class="max-w-full h-auto object-cover hover:scale-[1.02] transition-transform duration-500"
            loading="lazy"
          />
        </div>
        <div class="w-full animate-on-scroll" style="animation-delay: 0.4s;">
          <img 
            src="/assets/style_3.png" 
            alt="Style view 3"
            class="w-full h-auto object-cover hover:scale-[1.02] transition-transform duration-500"
            loading="lazy"
          />
        </div>
      </div>

      <div class="flex flex-col gap-8 lg:gap-12">
        <div class="w-full animate-on-scroll" style="animation-delay: 0.1s;">
          <img 
            src="/assets/style_4.png" 
            alt="Style view 4"
            class="max-w-full h-auto object-cover hover:scale-[1.02] transition-transform duration-500"
            loading="lazy"
          />
        </div>
        <div class="w-full animate-on-scroll" style="animation-delay: 0.3s;">
          <img 
            src="/assets/style_5.png" 
            alt="Style view 5"
            class="max-w-full h-auto object-cover hover:scale-[1.02] transition-transform duration-500"
            loading="lazy"
          />
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
