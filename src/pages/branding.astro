---
import BaseLayout from '../layouts/BaseLayout.astro';
import GoBack from '../components/GoBack.jsx';
---

<BaseLayout title="Branding - Sara El Aam">
  <!-- Hero Section -->
  <section class="relative bg-black pt-24 pb-20 sm:pt-32 shadow-lg text-primary-mid overflow-hidden">
    <div class="flex justify-center items-center px-6">
      <div class="relative text-left">
        <h1 class="font-clash font-medium leading-[0.9] tracking-widest text-5xl md:text-[8rem] animate-on-scroll">
          Branding
        </h1>
      </div>
    </div>
    
    <!-- Go Back Button -->
    <div class="absolute left-6 bottom-6">
      <GoBack client:load />
    </div>
  </section>

  <!-- Projects Grid -->
  <section class="py-20 bg-background-light dark:bg-background-dark">
    <div class="max-w-7xl mx-auto px-6">
      <!-- Mobile: single column, Tablet: 2 cols, Desktop: 10-column staggered grid -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-10 gap-8 lg:gap-y-16 font-general">
        
        <!-- Row 1: starts at col 1, 4, 7 -->
        <!-- Casa Orla - col 1 -->
        <a href="/casaorla" class="group animate-on-scroll lg:col-start-1 lg:col-span-2">
          <div class="aspect-[233/220] w-full">
            <div class="overflow-hidden h-full">
              <img 
                src="/assets/casaorla_green.svg" 
                alt="Casa Orla branding project"
                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                loading="lazy"
              />
            </div>
          </div>
          <p class="mt-4 text-center group-hover:text-primary transition-colors">CASA ORLA</p>
        </a>

        <!-- 2030 World Cup - col 4 -->
        <a href="/worldcup" class="group animate-on-scroll lg:col-start-4 lg:col-span-2" style="animation-delay: 0.1s;">
          <div class="aspect-[233/220] w-full">
            <div class="overflow-hidden h-full">
              <img 
                src="/assets/enmvt_link.png" 
                alt="2030 World Cup branding project"
                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                loading="lazy"
              />
            </div>
          </div>
          <p class="mt-4 text-center group-hover:text-primary transition-colors">2030 World Cup</p>
        </a>

        <!-- PIATO - col 7 -->
        <a href="/piato" class="group animate-on-scroll lg:col-start-7 lg:col-span-2" style="animation-delay: 0.2s;">
          <div class="aspect-[233/220] w-full">
            <div class="overflow-hidden h-full">
              <img 
                src="/assets/piato_menu.png" 
                alt="PIATO Restaurant branding"
                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                loading="lazy"
              />
            </div>
          </div>
          <p class="mt-4 text-center group-hover:text-primary transition-colors">PIATO - Restaurant</p>
        </a>

        <!-- Row 2: starts at col 3, 6, 9 -->
        <!-- Book Festival - col 3 -->
        <a href="/book-fest" class="group animate-on-scroll lg:col-start-3 lg:col-span-2" style="animation-delay: 0.3s;">
          <div class="aspect-[233/220] w-full">
            <div class="overflow-hidden h-full">
              <img 
                src="/assets/book_festival.png" 
                alt="Book Festival branding project"
                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                loading="lazy"
              />
            </div>
          </div>
          <p class="mt-4 text-center group-hover:text-primary transition-colors">Book Festival</p>
        </a>

        <!-- Chocolate - col 6 -->
        <a href="/chocolate" class="group animate-on-scroll lg:col-start-6 lg:col-span-2" style="animation-delay: 0.4s;">
          <div class="aspect-[233/220] w-full">
            <div class="overflow-hidden h-full">
              <img 
                src="/assets/sweet siblings PNG.png" 
                alt="Chocolate branding project"
                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                loading="lazy"
              />
            </div>
          </div>
          <p class="mt-4 text-center group-hover:text-primary transition-colors">Chocolate</p>
        </a>

        <!-- Book Store - col 9 -->
        <a href="/book-store" class="group animate-on-scroll lg:col-start-9 lg:col-span-2" style="animation-delay: 0.5s;">
          <div class="aspect-[233/220] w-full">
            <div class="overflow-hidden h-full">
              <img 
                src="/assets/tbk web.png" 
                alt="Book Store branding project"
                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                loading="lazy"
              />
            </div>
          </div>
          <p class="mt-4 text-center group-hover:text-primary transition-colors">Book Store</p>
        </a>

      </div>
    </div>
  </section>
</BaseLayout>
